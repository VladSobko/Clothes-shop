@model shop_proj.VModels.Register
<h2>Реєстрація нового користувача</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" style="color:red"></span>
    </div>
    <div>
        <label asp-for="Year"></label><br />
        <input asp-for="Year" class="form-control"/>
        <span asp-validation-for="Year"  style="color:red"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" style="color:red"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" class="form-control"/>
        <span asp-validation-for="PasswordConfirm" style="color:red"></span>
    </div>
    <div>
        <input type="submit" value="Реєстрація" />
    </div>
</form>