@model shop_proj.Models.Category
@{
    ViewBag.Title = "Додавання нової категорії";
}
<h2>@ViewBag.Title</h2>
<form asp-action="addcategory" asp-controller="admin" enctype="multipart/form-data">
    <div class="form-group">
        <div></div>
        <label asp-for="Name" class="control-label">Назва</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" style="color:red"></span>
        <select asp-for="SexId" class="form-control" asp-items="@(new SelectList(ViewBag.Sex, "Id","Name"))"></select>
    </div>
   


    <div class="form-group">
        <input type="submit" value="Додати" class="btn btn-default" />
    </div>
</form>